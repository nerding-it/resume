    \textbf{\huge #1}                                     & \large \faComment #3 & \large \faHome #5\\
    \hspace{0.15cm} \large \faGlobe \hspace{0.03cm} \large \boldurl{#2}{#2} & \large \faPhone   #4 & \hspace{0.29cm} \large        #6 \\
    \hspace{0.15cm}  & \hspace{0.15cm} & \hspace{0.29cm} \large #7\\
    \end{tabular*}
    \\
}

