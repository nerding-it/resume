%% Document Header
\newcommand{\resheader}[6]{
    \begin{tabular*}{\textwidth}{l@{\extracolsep{\fill}}cr}
    \textbf{\LARGE #1}                   &  \faComment #3               &    \faHome #5\\
    \faGlobe \hspace{0.03cm} \href{#2}{#2}    &   \faPhone #4                &             #6\\
    \end{tabular*}
    \\
    \vspace{0.1in}
}

